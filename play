var enemy = getNearestEnemy();
var name_enemy = getName(enemy);
var name = getEntity();
var weapon_enemy = getWeapon(enemy)
var port_enemy = getWeaponMaxRange(enemy)
var steps_enemy = getMP(enemy)

if (getWeapon() === null) {
	setWeapon(WEAPON_PISTOL);
	say('Good Luck ' + name_enemy + ' 🍀')
}

moveToward(enemy);

while (getTP() > getWeaponCost(weapon_enemy) && getLife(enemy) > 0 && canUseWeapon(enemy)) {
	useWeapon(enemy);
}

if (getLife(enemy) === 0) {
	say('GG! 😉')
}
